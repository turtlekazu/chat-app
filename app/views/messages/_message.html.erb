<div class="main-message">
  <div class="main-message-info">
    <div class="main-message-name"><%= message.user.name %></div>
    <div class="main-message-date"><%= l message.created_at %></div>
  </div>
  <div class="main-message-text"><%= message.content %></div>
  <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</div>
