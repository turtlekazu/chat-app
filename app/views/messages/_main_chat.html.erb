<div class="main-header">
  <div class="main-room-name">
    Morrison
  </div>
  <div class="exit-chat-btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="main-main">
  <div class="main-message">
    <div class="main-message-info">
      <div class="main-message-name">Sato</div>
      <div class="main-message-date">2020/2/3(Wed) 11:50:00</div>
    </div>
    <div class="main-message-text">時は金なり</div>
  </div>
  <div class="main-message">
    <div class="main-message-info">
      <div class="main-message-name">Sato</div>
      <div class="main-message-date">2020/2/3(Wed) 11:50:00</div>
    </div>
    <div class="main-message-text">時は金なり</div>
  </div>
</div>
<%= form_with model: [@room, @message], class: 'main-form', local: true do |f| %>
  <div class="main-form-form">
    <%= f.text_field :content, class: 'main-form-text', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit "送信", class: 'main-form-submit' %>
<% end %>