<div class="main-header">
  <div class="main-room-name">
    <%= @room.name %>
  </div>
  <div class="exit-chat-btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="main-main">
  <%= render partial: 'message', collection: @messages %>
</div>
<%= form_with model: [@room, @message], class: 'main-form', local: true do |f| %>
  <div class="main-form-form">
    <%= f.text_field :content, class: 'main-form-text', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit "送信", class: 'main-form-submit' %>
<% end %>